<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gqh.mystudio.activity.GuanjiaJinduChaxunActivity">


    <include layout="@layout/item_title"/>
    <include layout="@layout/item_cut_line_2"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tarena.utils.ImageCircleView
            android:id="@+id/photo"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/touxiang"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="9dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="22.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房间号："
            android:textColor="#666"
            android:textSize="13sp"
            android:layout_marginLeft="47.5dp"
            />
        <TextView
            android:id="@+id/room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666"
            android:textSize="13sp"
            android:layout_marginLeft="5dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="12.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间段："
            android:textColor="#666"
            android:textSize="13sp"
            android:layout_marginLeft="47.5dp"
            />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666"
            android:textSize="13sp"
            android:layout_marginLeft="5dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="12.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务类型："
            android:textColor="#666"
            android:textSize="13sp"
            android:layout_marginLeft="47.5dp"
            />
        <TextView
            android:id="@+id/style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666"
            android:textSize="13sp"
            android:layout_marginLeft="5dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="12.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务要求："
            android:textColor="#666"
            android:textSize="13sp"
            android:layout_marginLeft="47.5dp"
            />
        <TextView
            android:id="@+id/yaoqiu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666"
            android:textSize="13sp"
            android:layout_marginLeft="5dp"
            />

    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.tarena.utils.ImageCircleView
            android:id="@+id/photo_1"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/touxiang"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/name_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小派"
            android:textColor="#333"
            android:textSize="15sp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="9dp"
            android:layout_toLeftOf="@+id/photo_1"
            />

        <TextView
            android:id="@+id/chuli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666"
            android:textSize="13sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_below="@+id/photo_1"
            android:layout_marginTop="20dp"
            />
    </RelativeLayout>

    <include layout="@layout/item_cut_line_2"/>

    <RelativeLayout
        android:layout_marginTop="7.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/kefu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系客服"
            android:textColor="#333"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12.5dp"
            android:drawableLeft="@drawable/iconfont_laba"
            android:drawablePadding="5dp"
            />

    </RelativeLayout>
</LinearLayout>
