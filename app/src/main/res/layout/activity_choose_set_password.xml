<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gqh.mystudio.activity.ChooseSetPasswordActivity">

    <include layout="@layout/item_title"/>
    <include layout="@layout/item_cut_line_2"/>


        <TextView
            android:id="@+id/tv_xiuGaiPass"
            android:text="修改密码"
            android:textColor="#333"
            android:textSize="15sp"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <include layout="@layout/item_cut_line"></include>
    <TextView
        android:id="@+id/tv_wangjiPass"
        android:text="找回密码"
        android:textColor="#333"
        android:textSize="15sp"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include layout="@layout/item_cut_line"/>
</LinearLayout>
