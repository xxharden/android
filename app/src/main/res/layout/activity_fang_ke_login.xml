<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/splash"
    tools:context="com.gqh.mystudio.activity.FangKeLoginActivity">

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/image_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iconfont_fanhui"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            />
    </RelativeLayout>


    <LinearLayout
        android:layout_weight="3"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@drawable/fangke_background">
                <RelativeLayout
                    android:layout_marginTop="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:background="@null"
                        android:id="@+id/et_phone"
                        android:hint="请输入您的手机号"
                        android:textSize="15sp"
                        android:textColor="#666"
                        android:maxLines="1"
                        android:inputType="phone"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="32.5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="37dp" />
                    <Button
                        android:id="@+id/bt_code"
                        android:onClick="doClick"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="获取验证码"
                        android:textColor="#fff"
                        android:textSize="13sp"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:background="@drawable/shape_huodong_more_btn"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="22.5dp"
                        />

                </RelativeLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fen_denglu_zhuce"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:background="@null"
                        android:id="@+id/et_code"
                        android:hint="输入验证码"
                        android:textSize="15sp"
                        android:maxLines="1"
                        android:textColor="#666"
                        android:inputType="number"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="32.5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="37dp" />


                </RelativeLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fen_denglu_zhuce"
                    />
                <Button
                    android:id="@+id/bt_login"
                    android:onClick="doClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录"
                    android:textSize="15sp"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:background="@drawable/shape_huodong_more_btn"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:layout_marginTop="19dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注：访客进入界面可体验享受部分功能！"
                    android:textColor="#333"
                    android:textSize="13sp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="15dp"
                    />

            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</LinearLayout>
