<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_baojie"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/baojie_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@drawable/guanjia_baojie"
            />
        <TextView
            android:id="@+id/baojie_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保洁"
            android:textSize="15sp"
            android:textColor="#333"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:id="@+id/tv_time_baojie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-2-22  14:00"
            android:textColor="#666"
            android:textSize="13sp"
            android:layout_marginLeft="62.5dp"
            />
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_style_baojie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="处理中"
                android:layout_alignParentRight="true"
                android:layout_marginRight="27.5dp"
                android:textSize="13sp"
                android:textColor="#666"
                />
            <Button
                android:id="@+id/bt_pingjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评价"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:textSize="13sp"
                android:focusable="false"
                android:clickable="true"
                android:textColor="#fff"
                android:gravity="center"
                android:visibility="gone"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/shape_huodong_more_btn"
                />


        </RelativeLayout>

    </LinearLayout>
    <include layout="@layout/item_cut_line"/>
</LinearLayout>