<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:descendantFocusability="blocksDescendants"
        android:id="@+id/item_zys_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/item_zys_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/yinshuiji" />

        <TextView
            android:id="@+id/item_zys_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/item_zys_iv"
            android:text="饮水机"
            android:textColor="#333"
            android:textSize="18sp" />


        <CheckBox
            android:id="@+id/item_zys_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/kaiguan_off"
            android:button="@null" />


    </RelativeLayout>

    <include layout="@layout/item_cut_line_2" />
</LinearLayout>
