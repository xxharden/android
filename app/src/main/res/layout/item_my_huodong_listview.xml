<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_huodong"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/zhanweitu"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="16dp"
            />
        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/image_huodong"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name_huodong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#333"
                />
            <RelativeLayout
                android:layout_marginTop="25.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rl_photo"
                    android:layout_width="39.5dp"
                    android:layout_height="39.5dp">

                    <com.tarena.utils.ImageCircleView
                        android:id="@+id/iv_photo"
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/zhanweitu"
                        android:layout_height="wrap_content" />

                   <!-- <ImageView
                        android:id="@+id/sex_lv_image_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/sex_nan" />-->
                </RelativeLayout>

                <TextView
                    android:id="@+id/name_faqiren"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/rl_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/tv_huodong_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666"
                    android:textSize="14sp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/rl_photo"
                    android:layout_below="@+id/name_faqiren"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:id="@+id/renshu_huodong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已参加 0 人"
                    android:textSize="12sp"
                    android:textColor="#666"
                    android:layout_below="@+id/rl_photo"
                    android:layout_marginTop="25dp"
                    />

                <TextView
                    android:id="@+id/time_huodong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#666"
                    android:layout_below="@+id/rl_photo"
                    android:layout_marginTop="25dp"
                    android:layout_toRightOf="@+id/renshu_huodong"
                    android:layout_marginLeft="10dp"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="集合地点 "
                android:textSize="12sp"
                android:textColor="#666"
                android:layout_marginTop="8.5dp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/dengdai_kaishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="等待开始"
            android:textSize="13sp"
            android:textColor="#666"
            android:layout_alignParentRight="true"
            android:layout_marginTop="150dp"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_huodong_more_btn_huise"
            android:padding="2dp"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/bt_pingjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:background="@drawable/shape_huodong_more_btn"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginTop="116dp"
            android:layout_marginRight="10dp"
            android:text="评价"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/bt_jieshou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:focusable="false"
            android:clickable="true"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginTop="116dp"
            android:layout_marginRight="10dp"
            android:text="接受"
            android:textSize="13sp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:background="@drawable/shape_huodong_more_btn"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/huodong_jieshu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动结束"
            android:textColor="#666"
            android:layout_below="@+id/bt_pingjia"
            android:layout_alignParentRight="true"
            android:layout_marginTop="9dp"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:textSize="13sp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingRight="2dp"
            android:paddingLeft="2dp"
            android:background="@drawable/shape_huodong_more_btn_huise"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/bt_hulue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忽略"
            android:focusable="false"
            android:clickable="true"
            android:textColor="#fff"
            android:layout_below="@+id/bt_jieshou"
            android:layout_alignParentRight="true"
            android:layout_marginTop="9dp"
            android:gravity="center"
            android:textSize="13sp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:background="@drawable/shape_huodong_more_btn"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            />
    </RelativeLayout>
    <include layout="@layout/item_cut_line_2"/>

</LinearLayout>