<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gqh.mystudio.activity.ShangjiaRuzhuActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/waji_title"
        >
        <ImageView
            android:id="@+id/image_fanhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iconfont_fanhui"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/link_fen"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="商家合作"
            android:textSize="18sp"
            android:textColor="#333"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="请留下您的信息及合作事项，我们会尽快给"
            android:textSize="15sp"
            android:textColor="#666"
            android:layout_marginTop="18dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="您回复！"
            android:textSize="15sp"
            android:textColor="#666"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/link_fen"
        />
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合作类型："
            android:textColor="#333"
            android:textSize="15sp"
            android:layout_marginLeft="25dp"
            />
        <TextView
            android:id="@+id/tv_leixing"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shangjia_ruzhu_1"
            android:text="美食"
            android:textSize="15sp"
            android:textColor="#333"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/shangjia_ruzhu_3"
            />
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单位名称："
            android:textColor="#333"
            android:textSize="15sp"
            android:layout_marginLeft="25dp"
            />
        <EditText
            android:id="@+id/et_mingcheng"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shangjia_ruzhu_1"
            android:textSize="15sp"
            android:textColor="#333"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓        名："
            android:textColor="#333"
            android:textSize="15sp"
            android:layout_marginLeft="25dp"
            />
        <EditText
            android:id="@+id/et_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shangjia_ruzhu_1"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            android:textColor="#333"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话："
            android:textColor="#333"
            android:textSize="15sp"
            android:layout_marginLeft="25dp"
            />
        <EditText
            android:id="@+id/et_phone"
            android:inputType="phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shangjia_ruzhu_1"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            android:textColor="#333"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮        箱："
            android:textColor="#333"
            android:textSize="15sp"
            android:layout_marginLeft="25dp"
            />
        <EditText
            android:id="@+id/et_email"
            android:inputType="textEmailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shangjia_ruzhu_1"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            android:textColor="#333"
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="具体事项："
            android:textColor="#333"
            android:textSize="15sp"
            android:layout_marginLeft="25dp"
            />
        <EditText
            android:id="@+id/et_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shangjia_ruzhu_1"
            android:textSize="15sp"
            android:textColor="#333"
            android:paddingLeft="5dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bt_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:textColor="#fff"
            android:textSize="15sp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:background="@drawable/shape_huodong_more_btn"
            android:gravity="center"
            />
    </RelativeLayout>
</LinearLayout>
