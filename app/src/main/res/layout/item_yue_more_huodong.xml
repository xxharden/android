<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7.5dp"
        android:textColor="#333"
        android:textSize="18sp"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#333"
                android:drawableLeft="@drawable/zuolin_iconfont_zuobiao"
                android:drawablePadding="5dp"
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#333"
                android:drawableLeft="@drawable/zuolin_iconfont_time"
                android:drawablePadding="5dp"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/tv_nums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#333"
                android:text="参加人数："
                android:layout_marginTop="15dp"
                />
            <TextView
                android:id="@+id/tv_jieshao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="9"
                android:textSize="13sp"
                android:textColor="#333"
                android:text="活动介绍："
                android:layout_marginTop="15dp"
                android:maxLines="2"
                android:ellipsize="end"
                />
        </LinearLayout>

       <RelativeLayout
           android:layout_weight="1"
           android:gravity="center"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/iv_photo"
               android:src="@drawable/zhanweitu"
               android:layout_width="122dp"
               android:layout_height="122dp"
               />

       </RelativeLayout>

    </LinearLayout>
    <include layout="@layout/item_cut_line_2"/>
</LinearLayout>